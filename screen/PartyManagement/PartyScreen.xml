<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        require-authentication="anonymous-all">

    <transition name="createParty">
        <service-call name="create#party.Party"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="party.Party" list="partyList"/>
    </actions>

    <widgets>

        <label text="Party List" type="h1"/>

        <container-dialog id="CreatePartyDialog" title="Create Party"
                          button-text="Create Party">

            <form-single name="CreateParty"
                         transition="createParty">

                <field name="partyTypeEnumId">
                    <default-field>
                        <drop-down required-manual-select="true">
                            <option key="PERSON"/>
                            <option key="PARTY_GROUP"/>
                        </drop-down>
                    </default-field>
                </field>


                <field name="submit">
                    <default-field title="submit button">
                        <submit />
                    </default-field>
                </field>
            </form-single>
        </container-dialog>





<!--   party data   -->
        <form-list name="PartyList" list="partyList">
            <field name="partyId">
                <header-field show-order-by="true">
                    <text-find hide-options="true"/>
                </header-field>
                <default-field><display/></default-field>
            </field>

            <field name="partyTypeEnumId">
                <default-field><display/></default-field>
            </field>

            <field name="createdDate">
                <default-field><display/></default-field>
            </field>
        </form-list>

    </widgets>
</screen>
